.box-basic {
  background: white;
  padding: 24rpx;
  font-size: 14px;
  padding-right: 0;
  margin-top: 12rpx;
}

.tabs {
  position: sticky;
  display: flex;
  height: 60rpx;
  text-align: center;
  border-bottom: 1px #eee solid;
  top: 50px;
  background-color: white;
  z-index: 1;
}
.tab_item {
  width: 100rpx;
}
.tab_item view {

  font-weight: bold;
  font-size: 14px;
}
.tab_item .line {
  background-color: rgb(248, 208, 28);
  height: 2px;
  margin: 18rpx 26rpx;
}

.goods-item {
  margin-top: 24rpx;
  display: flex;
}
.item-pic {
  width: 220rpx;
  height: 120rpx;
  background-color: #eee;
}
.item-pic image {
  width: 220rpx;
  height: 120rpx;
  /* display: inline-block; */
}
.item-text {
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good-title {
  font-size: 13px;
  font-weight: bold;
}
.good-descri {
  width: 430rpx;
  font-size: 10px;
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}

.before-price {
  margin-left: 10rpx;
  font-size: 10px;
  text-decoration: line-through;
}
.price-distance {
  display: flex;
  justify-content: space-between;
}